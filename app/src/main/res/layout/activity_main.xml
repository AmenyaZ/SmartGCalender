<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/yeartext"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:fontFamily="@font/googlesansmed"
        android:gravity="center"
        android:text="2010"
        android:textSize="26sp" />
         <com.amenyaz.smartgcalender.VerticalViewPager
            android:id="@+id/yearpager"
             android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/yeartext"
            android:orientation="vertical" />
    <com.amenyaz.gcalender.month.MonthView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/monthpager"
        app:dayHeight="23dp"
        app:daytextsize="11sp"
        app:datetextsize="12.6sp"
        app:eventtextsize="10sp"
        app:daytextcolor="#787878"
        app:datetextcolor="#000"
        app:datemargintop="10dp"
        android:background="@android:color/white"
        app:linewidth="1.1dp"
        app:linecolor="#EDEDED"/>

</RelativeLayout>